{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "rootDirs": [
      "src",
      "tests"
    ],
    "baseUrl": "src",
    "paths": {
      "@clean/*": [
        "clean/*"
      ],
      "@domain/*": [
        "clean/domain/*"
      ],
      "@data/*": [
        "clean/data/*"
      ],
      "@infrastructure/*": [
        "clean/infrastructure/*"
      ],
      "@presentation/*": [
        "clean/presentation/*"
      ],
      "@tests/*": [
        "../tests/*"
      ]
    },
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
